<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">


    <TextView
        android:id="@+id/text_roundtypename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_roundtypedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_roundtypename"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/text_roundtypename"
        android:paddingLeft="20dp"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text_roundtypedescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_roundtypename"
        android:layout_below="@+id/text_roundtypename"
        android:layout_marginBottom="5dp" />
</RelativeLayout>