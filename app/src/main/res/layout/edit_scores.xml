<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <!--<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
-->

    <!--<TextView
        android:id="@+id/end_scores_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
     />-->

    <TextView
        android:id="@+id/editscores_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginTop="5px"
        android:text="Scoring End X of Y"
        android:textSize="16dp" />

    <TableLayout
        android:id="@+id/edit_score_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
    </TableLayout>

    <TableLayout
        android:id="@+id/editscores_button_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:clickable="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:weightSum="2">

            <Button
                android:id="@+id/editscores_button_10"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_gold"
                android:text="10" />

            <Button
                android:id="@+id/editscores_button_9"
                style="@style/button_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_gold"
                android:text="9" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/editscores_button_8"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_red"
                android:text="8" />

            <Button
                android:id="@+id/editscores_button_7"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_red"
                android:text="7" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/editscores_button_6"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_blue"
                android:text="6" />

            <Button
                android:id="@+id/editscores_button_5"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_blue"
                android:text="5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/editscores_button_4"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_black"
                android:text="4" />

            <Button
                android:id="@+id/editscores_button_3"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_black"
                android:text="3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/editscores_button_2"
                style="@style/button_text_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_white"
                android:text="2" />

            <Button
                android:id="@+id/editscores_button_1"
                style="@style/button_text_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_white"
                android:text="1" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/editscores_button_table_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:clickable="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/editscores_button_0"
                style="@style/button_text_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_white"
                android:text="miss" />

            <Button
                android:id="@+id/editscores_button_delete"
                style="@style/button_text_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_white"
                android:text="&lt;-" />

            <Button
                android:id="@+id/editscores_button_clear"
                style="@style/button_text_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button_white"
                android:text="clear" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/editscores_button_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="1"
        android:text="Save"
        android:textSize="30dp" />

</LinearLayout>