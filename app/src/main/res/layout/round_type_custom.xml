<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rtcustom_text0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Name" />

                <EditText
                    android:id="@+id/rtcustom_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pauls Custom Round Type"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/rtcustom_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Description" />

                <EditText
                    android:id="@+id/rtcustom_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="example : Custom indoor: 2.5doz/20yds"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/rtcustom_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Distance" />

                <EditText
                    android:id="@+id/rtcustom_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="example : 20yds"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/rtcustom_text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Target Size" />

                <EditText
                    android:id="@+id/rtcustom_targetsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="example : 60cm"
                    android:textSize="16dp" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/rtcustom_text4"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Ends" />

                        <TextView
                            android:id="@+id/rtcustom_text5"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Arrows Per End" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/rtcustom_numends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:hint=""
                            android:numeric="integer"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/rtcustom_numarrowsperend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:hint=""
                            android:numeric="integer"
                            android:textSize="16dp" />
                    </TableRow>
                </TableLayout>


                <TextView
                    android:id="@+id/rtcustom_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Location" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rtcustom_indoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Indoors" />

                    <RadioButton
                        android:id="@+id/rtcustom_outdoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outdoors" />
                </RadioGroup>

                <TextView
                    android:id="@+id/rtcustom_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Target Scoring Zones" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rtcustom_score_10Zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="10 Zone" />

                    <RadioButton
                        android:id="@+id/rtcustom_score_5Zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Zone" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rtcustom_button_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Cancel" />

                    <Button
                        android:id="@+id/rtcustom_button_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:text="Create" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </ScrollView>


</LinearLayout>