<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoundScores">

    <TextView
        android:id="@+id/round_scores_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TableLayout
        android:id="@+id/dynamic_scores_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp">
    </TableLayout>

    <TableLayout
        android:id="@+id/summary_table"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="#000000"
        android:layout_gravity="bottom">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/round_total"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="Total=0"
                android:layout_gravity="left|top" />

            <TextView
                android:id="@+id/round_avg"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="Average=0"
                android:layout_gravity="right|top"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/round_ends"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="Ends=0"
                android:layout_gravity="left|top" />

            <TextView
                android:id="@+id/round_arrows"
                android:layout_width="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="Arrows=0"
                android:layout_gravity="right|top"
                android:layout_marginRight="5dp" />
        </TableRow>

    </TableLayout>




</LinearLayout>